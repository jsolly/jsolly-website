{
	"extends": "astro/tsconfigs/strict",
	"include": [".astro/types.d.ts", "src/**/*", "**/*.test.ts"],
	"exclude": ["**/node_modules/**", "dist/**", ".astro"],
	"compilerOptions": {
		"plugins": [
			{
				"name": "@astrojs/ts-plugin"
			}
		],
		"strictNullChecks": true,
		"allowJs": true,
		"baseUrl": ".",
		"skipLibCheck": true
	}
}
