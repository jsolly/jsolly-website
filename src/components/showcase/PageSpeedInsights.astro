---
import { Image } from "astro:assets";
import lightHouseScores from "../../images/svg/lighthouseScores.svg";
---

<div
    id="PageSpeed-Insights"
    class="page-speed-insights-section text-center text-base"
>
    <div class="flex justify-center">
        <div class="w-full">
            <figure>
                <figcaption class="figcaption-text mb-4">
                    <a
                        rel="noopener noreferrer"
                        target="_blank"
                        href="https://pagespeed.web.dev/analysis/https-www-jsolly-com/boy4nl6o2b?form_factor=mobile"
                    >
                        jsolly.com PageSpeed Insights
                    </a>
                </figcaption>
                <Image
                    src={lightHouseScores}
                    alt="Lighthouse scores for jsolly.com: 100 for Performance, Accessibility, Best Practices, and SEO."
                    height={160}
                    class="h-40 w-auto mx-auto"
                />
            </figure>
        </div>
    </div>
</div>
