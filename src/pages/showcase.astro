---
import ContactMe from "../components/ContactMe.astro";
import ShortSollyBio from "../components/showcase/ShortSollyBio.astro";
import PageSpeedInsights from "../components/showcase/PageSpeedInsights.astro";
import ShowcaseCards from "../components/showcase/ShowcaseCards.astro";
import Testimonials from "../components/showcase/Testimonials.astro";
import Layout from "../layouts/Layout.astro";
---

<Layout
    title="John Solly's Showcase"
    description="Explore the comprehensive showcase of John Solly's impactful work, projects, and contributions to the geospatial and software engineering fields."
>
    <div class="flex flex-col gap-6">
        <h1 class="text-3xl font-bold tracking-tight text-text">Showcase</h1>
        <ShortSollyBio />
        <Testimonials />
        <ShowcaseCards />
        <ContactMe />
        <PageSpeedInsights />
    </div>
</Layout>

<script src="/src/scripts/carousel.js"></script>
